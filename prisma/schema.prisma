generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  email       String  @unique
  firstName   String
  lastName    String
  location    String
  phoneNumber String
  password    String
  status      String  @default("Active")
  role        String  @default("Owner")
  books       Book[]
  avatar      String?
}

model Book {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  author   String
  quantity Int
  rent     Int
  cover    String
  bookName String
  category String
  User     User?   @relation(fields: [userId], references: [id])
  userId   String? @db.ObjectId
}
