generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  email         String         @unique
  firstName     String
  lastName      String
  location      String
  phoneNumber   String
  password      String
  status        String         @default("Active")
  role          String         @default("Owner")
  uploadedbooks UploadedBook[] @relation("UploadedBook")
  books         Book[]
  avatar        String?
}

model UploadedBook {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  book     Book[]
  quantity Int
  rent     Int
  cover    String
  userId   String? @db.ObjectId
  User     User?   @relation("UploadedBook", fields: [userId], references: [id])
  bookId   String  @db.ObjectId
}

model Book {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  author         String
  bookName       String
  category       String
  User           User?         @relation(fields: [userId], references: [id])
  userId         String?       @db.ObjectId
  UploadedBook   UploadedBook? @relation(fields: [uploadedBookId], references: [id])
  uploadedBookId String?       @db.ObjectId
}
